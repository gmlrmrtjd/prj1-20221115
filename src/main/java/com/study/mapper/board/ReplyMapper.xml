<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.study.mapper.board.ReplyMapper">

	<delete id="deleteByBoardId">
	DELETE FROM Reply
	WHERE boardId = #{id}
	</delete>

	<update id="update">
	UPDATE Reply
	SET
		content = #{content}
	WHERE 
		id = #{id}
	</update>

	<select id="selectById" resultType="com.study.domain.board.ReplyDto">
	SELECT
		id,
		boardId,
		content,
		inserted
	FROM
		Reply
	WHERE
		id = #{id}
		
	</select>

	<delete id="deleteById">
	DELETE FROM Reply
	WHERE id = #{id}
	</delete>

	<select id="selectReplyByBoardId" resultType="com.study.domain.board.ReplyDto">
	SELECT 
		id,
		boardId,
		content,
		inserted
	FROM
		Reply
	WHERE
		boardId = #{boardId}
	ORDER BY
		id DESC
	</select>

	<insert id="insert">
	INSERT INTO Reply (boardId, content)
	VALUES (#{boardId}, #{content})
	</insert>
</mapper>